<Window x:Class="CSVC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVC"
        mc:Ignorable="d"
        Title="CSVC" Height="250" Width="500">
    <Grid>
        <Button x:Name="LoadConfigFileButton" Content="Load Config File" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="125"
                Click="LoadConfigFileButton_OnClick" />
        <Button x:Name="LoadCSVFileButton" Content="Load CSV File" HorizontalAlignment="Left" Margin="125,0,0,0" VerticalAlignment="Top" Width="125"
                Click="LoadCSVFileButton_OnClick" />
        <Button x:Name="Convert" Content="Convert to CSV File" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Top" Width="125"
                Click="ConvertButton_OnClick" />
        <DataGrid Name="RulesDataGrid" HorizontalAlignment="Left" Margin="0,21,0,0" VerticalAlignment="Top" Height="300" Width="500" AutoGenerateColumns="True">
        </DataGrid>
        <DataGrid Name="CSVDataGrid" HorizontalAlignment="Left" Margin="0,321,0,0" VerticalAlignment="Top" Height="300" Width="500" AutoGenerateColumns="True">
        </DataGrid>
    </Grid>
</Window>
